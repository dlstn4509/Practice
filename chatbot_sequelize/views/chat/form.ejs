<div class="form-wrapper wrapper mt-5">
  <div class="form-wrap">
    <form action="/chat/form" method="POST" name="formForm" enctype="multipart/form-data">
      <input type="hidden" name="user_id" value="<%= user.id %>">
      <table class="table">
        <tbody>
          <tr>
            <td>아이디</td>
            <td><input type="text" value="dlstn4509" readonly></td>
          </tr>
          <tr>
            <td>닉네임</td>
            <td><input type="text" name="writer"></td>
          </tr>
          <tr>
            <td>내용</td>
            <td><input type="text" name="content"></td>
          </tr>
          <tr>
            <td>첨부파일</td>
            <td><input type="file" name="file" required></td>
          </tr>
          <tr>
            <td>첨부파일2</td>
            <td><input type="file" name="file2" required></td>
